    <script>
                function toggleSection(header) {
                    const content = header.nextElementSibling;
                    const allContents = document.querySelectorAll('.section-content');

                    allContents.forEach((section) => {
            if (section !== content) {
                section.style.display = 'none'; // Diğer açık olanları kapat
            }
        });

        // Seçilen bölümün görüntülenmesini ayarla
        content.style.display = content.style.display === 'block' ? 'none' : 'block';
        }
            function loadAircrafts() {
            fetch('/Admin/GetAircrafts') // Backend'deki action URL'i çağırır.
                .then(response => response.text())
                .then(data => {
                    document.getElementById('aircrafts-section').innerHTML = data;
                })
                .catch(error => {
                    console.error('Hata oluştu:', error);
                    document.getElementById('aircrafts-section').innerHTML = '<p>Veriler yüklenemedi.</p>';
                });
        }
                function loadFlights() {
            fetch('/Admin/GetFlights') // Backend'deki action URL'i çağırır.
                .then(response => response.text())
                .then(data => {
                    document.getElementById('flights-section').innerHTML = data;
                })
                .catch(error => {
                    console.error('Hata oluştu:', error);
                    document.getElementById('flights-section').innerHTML = '<p>Veriler yüklenemedi.</p>';
                });
        }
        function loadAirports() {
            fetch('/Admin/GetAirports') // Backend'deki action URL'i çağırır.
                .then(response => response.text())
                .then(data => {
                    document.getElementById('airports-section').innerHTML = data;
                })
                .catch(error => {
                    console.error('Hata oluştu:', error);
                    document.getElementById('airports-section').innerHTML = '<p>Veriler yüklenemedi.</p>';
                });
        }
                function loadUsers() {
            fetch('/Admin/GetUsers') // Backend'deki action URL'i çağırır.
                .then(response => response.text())
                .then(data => {
                    document.getElementById('users-section').innerHTML = data;
                })
                .catch(error => {
                    console.error('Hata oluştu:', error);
                    document.getElementById('users-section').innerHTML = '<p>Veriler yüklenemedi.</p>';
                });
        }
                // Hem toggleSection hem de loadAircrafts fonksiyonunu çalıştıran fonksiyon
        function handleAircraftsSection(header) {
            toggleSection(header); // Bölümü aç/kapat
            if (header.nextElementSibling.style.display === 'block') {
                loadAircrafts(); // İçerik sadece bölüm açıldığında yüklenir
            }
        }
                // Hem toggleSection hem de loadFlights fonksiyonunu çalıştırır
        function handleFlightsSection(header) {
            toggleSection(header); // Bölümü aç/kapat
            if (header.nextElementSibling.style.display === 'block') {
                loadFlights(); // İçerik sadece bölüm açıldığında yüklenir
            }
        }
        function handleAirportsSection(header) {
            toggleSection(header); // Bölümü aç/kapat
            if (header.nextElementSibling.style.display === 'block') {
                loadAirports(); // İçerik sadece bölüm açıldığında yüklenir
            }
        }
                function handleUsersSection(header) {
            toggleSection(header); // Bölümü aç/kapat
            if (header.nextElementSibling.style.display === 'block') {
                loadUsers(); // İçerik sadece bölüm açıldığında yüklenir
            }
        }

    </script>

