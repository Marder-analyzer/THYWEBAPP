        <div class="left-panel">
            <h1>Hatalar</h1>

            @if (ViewBag.ErrorMessage != null)
            {
                <p style="color: red;">@ViewBag.ErrorMessage</p>
            }
            else if (Model != null)
            {
                <div class="error-item">
                        @foreach (var error in Model)
                        {
                        <p class="error-title">@error.AircraftErrorDescription</p>
                        <p class="error-time">
                            @{
                                var timeDifference = DateTime.Now - error.AircraftReportDate;
                                if (timeDifference.TotalMinutes < 1)
                                {
                                    <span>Saniyeler önce</span>
                                }
                                else if (timeDifference.TotalMinutes < 60)
                                {
                                    <span>@Math.Floor(timeDifference.TotalMinutes) dakika önce</span>
                                }
                                else if (timeDifference.TotalHours < 24)
                                {
                                    <span>@Math.Floor(timeDifference.TotalHours) saat önce</span>
                                }
                                else
                                {
                                    <span>@Math.Floor(timeDifference.TotalDays) gün önce</span>
                                }
                            }
                        </p>
                        <p class="error-plane">Uçak : @error.AircraftName</p>
                                
                                
                        }
                    </div>
            }
            else
            {
                <p>Hiç hata bulunmamaktadır.</p>
