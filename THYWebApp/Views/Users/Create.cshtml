@model THYWebApp.Models.Users


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Üye Ol</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background-color: #910e0e;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            color: white;
        }

        .navbar h1 {
            margin: 0;
            font-size: 20px;
            font-weight: bold;
            color: white;
        }

        .navbar .nav-links {
            display: flex;
            justify-content: center;
            width: 100%;
            position: relative;
        }

        .navbar .nav-links a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            padding: 5px 15px;
            border-radius: 5px;
        }

        .navbar .nav-links a.active {
            background-color: white;
            color: #910e0e;
        }

        .navbar .nav-links {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
        }

        .container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            max-width: 600px;
            margin: auto;
            margin-top: 50px;
        }

        h2 {
            color: #910e0e;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-label {
            font-weight: bold;
            color: #495057;
        }

        input, textarea {
            border-radius: 5px;
            border: 1px solid #ced4da;
            padding: 10px;
            width: 100%;
        }

        input:focus, textarea:focus {
            border-color: #910e0e;
            outline: none;
            box-shadow: 0 0 4px rgba(145, 14, 14, 0.5);
        }

        .btn-danger {
            background-color: #910e0e;
            border-color: #910e0e;
            font-size: 16px;
            width: 100%;
        }

        .btn-danger:hover {
            background-color: #720c0c;
            border-color: #5a0a0a;
        }

        .message {
            text-align: center;
            margin-bottom: 20px;
        }

        .message p {
            margin: 0;
            font-weight: bold;
        }

        .message .text-success {
            color: green;
        }

        .message .text-danger {
            color: red;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <h1>Türk Hava Yolları</h1>
        <div class="nav-links">
            <a >Uçuş Seçimi</a>
            <a class="active">Yolcu Bilgileri</a>
            <a>Ödeme</a>
        </div>
    </div>

    <div class="container">
        <h2>Üye Ol</h2>
        @if (TempData["ErrorCreateUser"] != null)
            {
            <p style="color: red;">@TempData["ErrorCreateUser"]</p>
            }

        @if (TempData["SuccessCreateUser"] != null)
            {
            <p style="color: green;">@TempData["SuccessCreateUser"]</p>
            }

         <form asp-action="Create" method="post">

            <div class="mb-3">
                <label for="UserName" class="form-label">Ad:</label>
                <input type="text" id="UserName" class="form-control" name="UserName" value="@Model.UserName" required />
            </div>

            <div class="mb-3">
                <label for="UserMiddleName" class="form-label">İkinci Ad (Opsiyonel):</label>
                <input type="text" id="UserMiddleName" class="form-control" name="UserMiddleName" value="@Model.UserMiddleName" />
            </div>

            <div class="mb-3">
                <label for="UserLastName" class="form-label">Soyad:</label>
                <input type="text" id="UserLastName" class="form-control" name="UserLastName" value="@Model.UserLastName" required />
            </div>

            <div class="mb-3">

                <label for="UserPassportNumber" class="form-label">Pasaport Numarası:</label>
                <input type="text" id="UserPassportNumber" class="form-control" name="UserPassportNumber" value="@Model.UserPassportNumber" required />
            </div>

            <div class="mb-3">

                <label for="UserNationality" class="form-label">Milliyet:</label>
                <input type="text" id="UserNationality" class="form-control" name="UserNationality" value="@Model.UserNationality" required />
            </div>

            <div class="mb-3">
                <label for="UserDateOfBirth" class="form-label">Doğum Tarihi:</label>
                <input type="date" id="UserDateOfBirth" class="form-control" name="UserDateOfBirth" value="@Model.UserDateOfBirth.ToString("yyyy-MM-dd")" required />
            </div>

            <div class="mb-3">
                <label for="UserEmail" class="form-label">E-posta:</label>
                <input type="email" id="UserEmail" class="form-control" name="UserEmail" value="@Model.UserEmail" required />
            </div>

            <div class="mb-3">
                <label for="UserPhone" class="form-label">Telefon:</label>
                <input type="text" id="UserPhone" class="form-control" name="UserPhone" value="@Model.UserPhone" required />

            </div>
            <div class="mb-3">
                <label for="UserTCKimlik" class="form-label">T.C. Kimlik Numarası:</label>
                <input type="text" id="UserTCKimlik" class="form-control" name="UserTCKimlik" value="@Model.UserTCKimlik" required />
            </div>

            <div class="mb-3">
                <label for="UserPassword" class="form-label">Şifre:</label>
                <input type="password" id="UserPassword" class="form-control" name="UserPassword" value="@Model.UserPassword" required />
            </div>

            <div class="mb-3">
                <label for="UserAddress" class="form-label">Adres (Opsiyonel):</label>
                <textarea id="UserAddress" class="form-control" name="UserAddress">@Model.UserAddress</textarea>
            </div>


            <button type="submit" class="btn btn-danger">Üye Ol</button>
         </form>
    </div>
</body>
</html>
