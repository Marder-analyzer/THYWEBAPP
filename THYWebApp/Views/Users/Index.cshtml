@model THYWebApp.Models.Users

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Kullanıcı Bilgileri</title>
    <style>
        /* Aynı CSS kodları */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f8f9fa;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            margin: 0;
        }

        .navbar {
            background-color: #910e0e;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            color: white;
        }

            .navbar h1 {
                margin: 0;
                font-size: 20px;
                font-weight: bold;
                color: white;
            }

        .container {
            background: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            max-width: 600px;
            margin: auto;
            margin-top: 50px;
        }

        h2 {
            color: #910e0e;
            margin-bottom: 10px;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        th {
            background-color: #f1f1f1;
            font-weight: bold;
            color: #495057;
        }

        .btn-primary {
            background-color: ##910e0e;
            border-color: ##910e0e;
        }

            .btn-primary:hover {
                background-color: ##910e0e;
                border-color: ##910e0e;
            }
    </style>

</head>
<body>
    <div class="navbar">
        <h1>Türk Hava Yolları</h1>
    </div>
    <div class="container">
            @if (Model != null)
            {
                <h1>Kullanıcı Bilgileriniz</h1>

                <table border="1" >
                    <tr>
                        <th>Kullanıcı ID</th>
                        <td>@Model.UserID</td>
                    </tr>
                    <tr>
                        <th>Ad</th>
                        <td>@Model.UserName</td>
                    </tr>
                    @if (!string.IsNullOrWhiteSpace(Model.UserMiddleName))
                    {
                        <tr>
                            <th>İkinci Ad</th>
                            <td>@Model.UserMiddleName</td>
                        </tr>
                    }
                    <tr>
                        <th>Soyad</th>
                        <td>@Model.UserLastName</td>
                    </tr>
                    <tr>
                        <th>Milliyet</th>
                        <td>@Model.UserNationality</td>
                    </tr>
                    <tr>
                        <th>Doğum Tarihi</th>
                        <td>@Model.UserDateOfBirth.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <th>E-posta</th>
                        <td>@Model.UserEmail</td>
                    </tr>
                    <tr>
                        <th>Telefon</th>
                        <td>@Model.UserPhone</td>
                    </tr>
                    @if (!string.IsNullOrWhiteSpace(Model.UserTCKimlik))
                    {
                        <tr>
                            <th>T.C. Kimlik Numarası</th>
                            <td>@Model.UserTCKimlik</td>
                        </tr>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.UserAddress))
                    {
                        <tr>
                            <th>Adres</th>
                            <td>@Model.UserAddress</td>
                        </tr>
                    }
                </table>
                <!-- Devam Et Butonu -->
                <form method="get" action="@Url.Action("Create", "Reservation")">
                    <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Devam Et</button>
                </form>
                <div style="position: fixed; bottom: 20px; left: 20px;">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary" style="background-color: #007bff; color: white; text-decoration: none; padding: 10px 20px; border-radius: 5px;">Anasayfaya Dön</a>
                </div>
            }
            else
            {
                <p>Kullanıcı bilgisi bulunamadı.</p>
            }
</body>
</html>